<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/icon_descricacao_adapter_ajustes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:paddingRight="10dp"
                android:src="@drawable/ic_pessoa" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/icon_descricacao_adapter_ajustes"
                android:gravity="left|center_vertical"
                android:paddingLeft="0dp"
                android:text="@string/ajuste_descricao"
                android:textColor="@color/textDefault"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@drawable/separator_repeat" />

        <ListView
            android:id="@+id/ajustes_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/separator_repeat"
            android:dividerHeight="7dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" />
    </LinearLayout>

    <include layout="@layout/include_rodape_m2m" />

</RelativeLayout>