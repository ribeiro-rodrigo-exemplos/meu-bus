<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="43dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/nome_ponto_adapter_meus_pontos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/container_check_adapter_meus_pontos"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="@null"
        android:textColor="@color/textDefault"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/container_check_adapter_meus_pontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/check_adapter_meus_pontos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:paddingRight="10dp"
            android:src="@drawable/ic_checkbox_off"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>